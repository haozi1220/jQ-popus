mixin banner(img, h2, span1, span2, ids)
        .banner
            .container
                if ids != ''
                    div(class="code", id!= ids)
                        img(src="images/td_code.png")
                    .ellipse
                        img(src="images/" + img, class="bannerImg")
                    div.title
                        div
                            h2= h2
                            span.line
                            p
                                span= span1
                                span &nbsp;/&nbsp;
                                span= span2
                else
                    div(class="code")
                        img(src="images/td_code.png")
                    .ellipse
                        img(src="images/" + img, class="bannerImg")
                    div.title
                        div
                            h2= h2
                            span.line
                            p
                                span= span1
                                span &nbsp;/&nbsp;
                                span= span2
